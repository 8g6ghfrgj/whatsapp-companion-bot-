{
  "name": "whatsapp-companion-bot",
  "version": "1.0.0",
  "description": "WhatsApp Companion Bot - نظام البوت المصاحب لواتساب مع مهام متعددة",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "init": "node scripts/initData.js",
    "backup": "node scripts/backupData.js",
    "export": "node scripts/generateExport.js",
    "clean": "node scripts/cleanup.js",
    "test": "jest --testPathPattern=__tests__ --coverage",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "lint": "eslint src/ scripts/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\"",
    "docs": "jsdoc src -r -d docs",
    "docker:build": "docker build -t whatsapp-companion-bot .",
    "docker:run": "docker run -d --name wabot whatsapp-companion-bot",
    "docker:stop": "docker stop wabot",
    "docker:logs": "docker logs -f wabot",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-companion-bot",
    "pm2:restart": "pm2 restart whatsapp-companion-bot",
    "pm2:logs": "pm2 logs whatsapp-companion-bot",
    "deploy": "npm run lint && npm test && npm run docker:build"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "companion",
    "automation",
    "arabic",
    "multitask",
    "links-collector",
    "auto-publisher",
    "group-joiner"
  ],
  "author": "WhatsApp Companion Bot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whatsapp-companion-bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-companion-bot/issues"
  },
  "homepage": "https://github.com/yourusername/whatsapp-companion-bot#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.5.0",
    "qrcode-terminal": "^0.12.0",
    "dotenv": "^16.3.1",
    "@hapi/boom": "^10.0.1",
    "axios": "^1.6.2",
    "moment": "^2.29.4",
    "chalk": "^4.1.2",
    "progress": "^2.0.3",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "node-emoji": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "rate-limiter-flexible": "^2.4.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "jsdoc": "^4.0.2",
    "@types/node": "^20.10.0",
    "supertest": "^6.3.3",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0"
  },
  "files": [
    "src/",
    "scripts/",
    "data/",
    "exports/",
    "docs/",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "contributors": [
    "Your Name <your.email@example.com>"
  ],
  "funding": {
    "type": "individual",
    "url": "https://paypal.me/yourpaypal"
  },
  "private": true,
  "publishConfig": {
    "access": "restricted"
  }
}
