# ================================
# WhatsApp Bot Environment Config
# ================================

# اسم الجلسة (يُستخدم لحفظ جلسة واتساب)
SESSION_NAME=main_whatsapp_session

# مسار حفظ الجلسات
SESSION_PATH=./data/sessions

# مستوى تسجيل الأخطاء
LOG_LEVEL=info

# قاعدة البيانات (SQLite)
DATABASE_PATH=./data/database.sqlite

# زمن الانتظار بين العمليات (مللي ثانية)
DEFAULT_DELAY=2000

# زمن الانتظار للانضمام للمجموعات (دقيقتان)
GROUP_JOIN_DELAY=120000

# مدة انتظار قبول الانضمام (24 ساعة)
GROUP_JOIN_TIMEOUT=86400000

# تفعيل الردود التلقائية
AUTO_REPLY_ENABLED=true

# تفعيل النشر التلقائي
AUTO_POST_ENABLED=false

# أقصى عدد مجموعات للنشر في الدورة الواحدة (حماية)
MAX_GROUPS_PER_CYCLE=9999

# ================================
# Advanced / Safety
# ================================

# إعادة الاتصال التلقائي
AUTO_RECONNECT=true

# حذف الجلسة عند فشل المصادقة
CLEAR_SESSION_ON_LOGOUT=false
